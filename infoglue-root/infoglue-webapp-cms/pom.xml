<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>infoglue-root</artifactId>
		<groupId>org.infoglue</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>infoglue-webapp-cms</artifactId>
	<packaging>war</packaging>
	<name>Infoglue Webapp CMS</name>
	<version>0.0.1-SNAPSHOT</version>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<filters>
						<filter>src/main/filters/filter.properties</filter>
					</filters>
					<webResources>
						<resource>
							<filtering>true</filtering>
							<directory>src/main/webappResources</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
		<filters>
			<filter>src/main/filters/filter.properties</filter>
		</filters>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.infoglue</groupId>
			<artifactId>infoglue-cms</artifactId>
		</dependency>
		<dependency>
			<groupId>org.infoglue</groupId>
			<artifactId>infoglue-cms-treeservice</artifactId>
		</dependency>
		<dependency>
			<groupId>org.infoglue</groupId>
			<artifactId>infoglue-deliver-jobs</artifactId>
		</dependency>
	</dependencies>
</project>